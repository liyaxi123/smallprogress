.bg {
  height: 100vh;
  background-repeat: no-repeat;
  background-size: cover;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1
}
.container {
  font-size: 32rpx;
  color: black;
}
.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 36rpx;
  transition: all 300ms ease
}
.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 20rpx;
}
.now {
  width: 100%;
  margin-top: 20rpx;
}
.now-position {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}