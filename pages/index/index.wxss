.bg {
  height: 100vh;
  background-repeat: no-repeat;
  background-size: cover;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1
}
.container {
  font-size: 32rpx;
  color: black;
}
.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 36rpx;
  transition: all 300ms ease
}
.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 20rpx;
}
.now {
  width: 100%;
  margin-top: 20rpx;
}
.now-position {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}
.now-position image {
  width: 28rpx;
  height: 28rpx;
}
.now-tmp {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.now-tmp-num {
  font-size: 120rpx;
}
.now-cond {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 40rpx;
}
.now-cond image {
  width: 60rpx;
  height: 60rpx;
}
.now-cond text {
  margin-left: 10rpx;
}
.now-items {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.now-items-left,.now-items-right {
  /* width: 50%; */
  box-sizing: border-box;
}
.now-items-left>view,.now-items-right>view {
  margin: 10rpx 20rpx;
}
.now-items-left{
  text-align:right;
  border-right: 1px solid #ffffff
}
.now-time {
  display: flex;
  justify-content: flex-end;
  font-size: 28rpx;
  margin: 0 20rpx 20rpx 0;
}
.hourly {
  padding: 20rpx 0;
  height: 400rpx;
}
.hourly-title,.forecast-title,.lifestyle-title{
 text-align: center;
 padding: 8rpx 0;
 border-bottom: 2rpx solid white;
}
.hourly-container{
  opacity: 0.3;
  background-color: rgba(0,0,0,.3);
  color:white;
  /* text-align: center; */
}
.hourly-swiper-column > view {
    margin-bottom:15rpx;
}
.hourly-swiper-item {
  display: flex;
  justify-content: space-around;
}
.hourly .forecast-icon,
.forecast .forecast-icon {
  width: 60rpx;
  height: 60rpx;
}
.forecast-items {
  display: flex;
  justify-content: flex-start
}
.forecast-items > view {
  width: 200rpx;
  text-align: left;
  padding-left:75rpx;
}
.forecast-items > image{
  margin-left: -50rpx;
}
.lifestyle-icon {
  height:100rpx;
  width: 100rpx;
}
canvas {
  margin-left:-50rpx;
}
.lifebvstyle {
  display: flex;
  flex-direction: column;
}
.lifebvstyle>view {
  display: flex;
  margin: 20rpx 20rpx;
  justify-content: space-around;
}
.lifestyle-item--pic {
 padding-right: 20rpx
}
.lifestyle-item--txt {
 line-height: 34rpx;
}
.lifestyle-item--desc {
  font-size: 26rpx;
}
scroll-view view {
  display: inline-block
}
.copyright text {
  font-size: 20rpx;
  color: grey;
}
.copyright {
  text-align: center;
}